<div class="card" style="margin-top: 10px">
  <div class="card-header">
    Buy ticket:
  </div>
  <div class="card-body">
    <%= form_with(model: [ @event, @event.tickets.build ], local: true) do |form| %>
      <div class="form-group row">
        <div class="col-lg-1">
          <%= form.label :places %>
        </div>
        <div class="col-lg-2">
          <%= form.number_field :places %>
        </div>
        <div class="col-lg-1">
          <%= form.submit "Buy ticket", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>