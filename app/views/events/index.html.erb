<% @events.each do |event| %>
  <div class="card" style="margin-top: 10px">
    <h5 class="card-header">
      <%= event.name %>
    </h5>
    <div class="card-body">
      <p class="card-text">
        <div class="row">
          <div class="col-lg-4">
            <img src=<%= "#{event.image}" %> alt="" style="max-height: 300px; max-width: 300px;">
          </div>
          <div class="col-lg-8">
            <table class="table">
              <tbody>
              <tr>
                <td>Opis:</td>
                <td><%= event.description %></td>
              </tr>
              <tr>
                <td>Data:</td>
                <td><%= event.event_date %></td>
              </tr>
              <tr>
                <td>Cena biletu:</td>
                <td><%= event.price %></td>
              </tr>
              <tr>
                <td>Ilość miejsc</td>
                <td><%= event.size %></td>
              </tr>
              <tr>
                <td>Dostępne dla dzieci</td>
                <td>
                  <% if(event.for_children) %>
                    <%= "tak" %>
                  <% else %>
                    <%= "nie" %>
                  <% end %>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      <div style="text-align: right; width: 100%">
        <div class="row">
          <div class="col-lg-6" style="text-align: left">
            <%= button_to "Usuń wydarzenie", event, :method=>:delete, class: "btn btn-danger" %>
          </div>
          <div class="col-lg-6">
            <%= link_to 'Szczegóły', event_path(event), class:"btn btn-primary", style: "display: inline" %>
            <a href="#" class="btn btn-success">Kup bilet</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
